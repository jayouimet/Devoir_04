<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParametresCompte">

    <TextView
        android:id="@+id/tvParametresCompte"
        android:layout_width="206dp"
        android:layout_height="58dp"
        android:text="Paramètres"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <ScrollView
    android:id="@+id/scrollviewfilm"
    android:layout_width="373dp"
    android:layout_height="554dp"
    android:layout_marginBottom="68dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.578"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="122dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/changerimage"></ImageView>


            <TextView

                android:id="@+id/tvChangerImage"
                android:layout_width="250dp"
                android:layout_height="62dp"
                android:text="Appuyez pour changer la photo de profil"
                android:textSize="20sp"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvInfoPerso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informations personnelles"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>
        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Jacques Utile"
            android:hint="Nom Complet" />


        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:text="514-999-1234"
            android:hint="Numéro de téléphone"/>

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="jacques.utile@utile.com"
            android:hint="Email" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Jacques1234Jiji"
            android:hint="Mot de passe"/>


        <EditText
            android:id="@+id/editTextTextPasswordConfirmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Jacques1234Jiji"
            android:hint="Confirmer le mot de passe"/>

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:text="1965-06-24"
            android:hint="date de naissance AAAA-MM-JJ"/>


        <Switch
            android:id="@+id/switchNotifications"
            android:layout_width="352dp"
            android:layout_height="48dp"
            android:text="Notifications"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="63dp" />

        <Switch
            android:id="@+id/switchTheme"
            android:layout_width="353dp"
            android:layout_height="43dp"
            android:text="Thème sombre"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="63dp" />

        <Switch
            android:id="@+id/switchDispoHorsLigne"
            android:layout_width="354dp"
            android:layout_height="58dp"
            android:text="Dispo. hors-ligne"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="63dp" />


        <LinearLayout
            android:layout_width="356dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/tvLangue"
                android:layout_width="294dp"
                android:layout_height="62dp"
                android:text="Langue"
                android:textColor="#201E1E"
                android:textSize="24sp"></TextView>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="31dp"
                app:srcCompat="@drawable/right_arrow"></ImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvMedias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Médias"
            android:textSize="24sp"
            android:textStyle="bold"></TextView>

        <RadioButton
            android:id="@+id/radioButtonCinema"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="Cinéma"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="65dp" />

        <RadioButton
            android:id="@+id/radioButtonNetflix"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="Netflix"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="65dp" />

        <RadioButton
            android:id="@+id/radioButtonPrimeVideo"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="Prime Video"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="65dp" />

        <RadioButton
            android:id="@+id/radioButtonCrave"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="Crave"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="65dp" />

        <RadioButton
            android:id="@+id/radioButtonSuperEcran"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:text="Super Écran"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="65dp" />


    </LinearLayout>
</ScrollView>

    <ImageView
        android:id="@+id/imagestardescription"
        android:layout_width="45dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047"
        app:srcCompat="@drawable/arrow"
        android:onClick="quitterParametresCompte"/>

    <Button
        android:id="@+id/btEnregistrerModifs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#AF2C2C"
        android:text="Enregistrer les modifications"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollviewfilm"
        android:onClick="quitterParametresCompte"/>


</androidx.constraintlayout.widget.ConstraintLayout>