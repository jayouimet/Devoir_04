<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".favoris">

    <TextView
        android:id="@+id/vosfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/favorinav"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/barrerechercheselonhumeurfavoris"
        android:layout_width="322dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/searchicon"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/recherchehumeur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vosfav" />

    <ListView
        android:id="@+id/listfavori"
        android:layout_width="341dp"
        android:layout_height="418dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrerechercheselonhumeurfavoris" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/barnavfav"
        android:layout_width="411dp"
        android:layout_height="82dp"
        android:layout_marginTop="9dp"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listfavori"
        app:layout_constraintVertical_bias="0.903"
        app:menu="@menu/navigation" />

    <ImageView
        android:onClick="goBackFavoris"
        android:id="@+id/retourFavori"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toStartOf="@+id/vosfav"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>