<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:layout_width="90dp"
    android:orientation="vertical" android:textAlignment="center">

    <ImageView
        android:id="@+id/imageutilisateurmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:src="@mipmap/angryreact_foreground" />

    <TextView
        android:id="@+id/titrehumeur"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"

        android:text="TextView" />

</LinearLayout>